{
  "name": "aln-orchestrator",
  "version": "1.0.0",
  "description": "ALN Orchestrator Server for video playback and game state management",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contract": "jest --testPathPattern=tests/contract",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:offline": "jest tests/integration/offline_mode.test.js --runInBand",
    "test:parallel": "jest --maxWorkers=4",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop aln-orchestrator vlc-http",
    "pm2:restart": "pm2 restart aln-orchestrator vlc-http",
    "pm2:reload": "pm2 reload aln-orchestrator",
    "pm2:delete": "pm2 delete aln-orchestrator vlc-http",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "setup": "./scripts/setup.sh",
    "vlc:start": "./scripts/start-vlc.sh"
  },
  "keywords": [
    "aln",
    "orchestrator",
    "websocket",
    "video",
    "game"
  ],
  "author": "ALN Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-persist": "^3.1.3",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.6.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
