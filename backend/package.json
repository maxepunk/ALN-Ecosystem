{
  "name": "aln-orchestrator",
  "version": "1.0.0",
  "description": "ALN Orchestrator Server for video playback and game state management",
  "main": "src/server.js",
  "scripts": {
    "// PRIMARY COMMANDS": "=== Main commands for typical usage ===",
    "start": "pm2 start ecosystem.config.js",
    "dev": "node scripts/start-dev.js",
    "test": "jest --config jest.config.js",
    "stop": "pm2 stop all",
    "health": "./scripts/check-health.sh",
    "// COMPONENT CONTROL": "=== Individual component management ===",
    "orchestrator:start": "node src/server.js",
    "orchestrator:dev": "nodemon src/server.js",
    "vlc:gui": "./scripts/vlc-gui.sh",
    "vlc:headless": "./scripts/vlc-headless.sh",
    "vlc:stop": "pkill -f 'vlc.*http' || true",
    "// DEVELOPMENT MODES": "=== Different development configurations ===",
    "dev:full": "concurrently -n 'VLC,ORCH' -c 'blue,green' 'npm run vlc:gui' 'npm run orchestrator:dev'",
    "dev:orchestrator": "NODE_ENV=development npm run orchestrator:dev",
    "dev:no-video": "FEATURE_VIDEO_PLAYBACK=false npm run orchestrator:dev",
    "dev:headless": "concurrently -n 'VLC,ORCH' -c 'blue,green' 'npm run vlc:headless' 'npm run orchestrator:dev'",
    "// PRODUCTION (PM2)": "=== Production management with PM2 ===",
    "prod:start": "NODE_ENV=production pm2 start ecosystem.config.js",
    "prod:stop": "pm2 stop aln-orchestrator vlc-http",
    "prod:restart": "pm2 restart all",
    "prod:reload": "pm2 reload aln-orchestrator",
    "prod:logs": "pm2 logs",
    "prod:status": "pm2 status",
    "prod:monit": "pm2 monit",
    "prod:save": "pm2 save",
    "prod:startup": "pm2 startup",
    "// HEALTH & VERIFICATION": "=== System status checks ===",
    "health:api": "curl -s http://localhost:3000/health | jq",
    "health:vlc": "curl -s -u :vlc http://localhost:8080/requests/status.json | jq '.version' && echo 'VLC is running' || echo 'VLC not responding'",
    "health:quick": "curl -s -o /dev/null -w 'Orchestrator: %{http_code}\\n' http://localhost:3000/health",
    "// TESTING": "=== Test execution commands ===",
    "test": "npm run test:contract && npm run test:integration",
    "test:all": "jest --config jest.config.js",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:contract": "jest --testPathPattern=tests/contract",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:contract && npm run test:integration",
    "test:offline": "jest tests/integration/offline_mode.test.js --runInBand",
    "// UTILITIES": "=== Maintenance and setup ===",
    "setup": "./scripts/setup.sh",
    "clean:logs": "rm -rf logs/*.log",
    "clean:data": "rm -rf data/*",
    "clean:all": "npm run clean:logs && npm run clean:data",
    "reset": "npm run stop && npm run clean:all",
    "lint": "eslint .",
    "format": "prettier --write .",
    "// SUBMODULE MANAGEMENT": "=== Git submodule synchronization ===",
    "sync": "./scripts/sync-all.sh",
    "sync:setup": "./scripts/setup-branch-tracking.sh",
    "sync:update": "git submodule update --remote --recursive --merge",
    "sync:status": "git submodule status --recursive",
    "sync:fetch": "git submodule foreach --recursive 'git fetch origin'",
    "sync:push": "git push --recurse-submodules=on-demand",
    "sync:push-all": "git submodule foreach 'git push origin main || :' && git push origin main",
    "sync:quick": "git submodule update --remote --recursive --merge && git add . && git diff --staged --quiet || git commit -m 'chore: Sync submodules'"
  },
  "keywords": [
    "aln",
    "orchestrator",
    "websocket",
    "video",
    "game"
  ],
  "author": "ALN Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-persist": "^3.1.3",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
