# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=24h

# Admin Configuration
ADMIN_PASSWORD=change-this-password-in-production

# VLC Configuration
VLC_HOST=localhost
VLC_PORT=8080
VLC_PASSWORD=vlc-password

# Video Directory
VIDEO_DIR=/path/to/video/assets

# Storage Configuration
DATA_DIR=./data
LOGS_DIR=./logs
BACKUP_INTERVAL=100
ARCHIVE_AFTER=24

# Session Configuration
MAX_PLAYERS=10
MAX_GM_STATIONS=5
DUPLICATE_WINDOW=5
SESSION_TIMEOUT=120
HEARTBEAT_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_PAYLOAD=1000000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Game Configuration
TRANSACTION_HISTORY_LIMIT=1000
RECENT_TRANSACTIONS_COUNT=10
BONUS_THRESHOLD=5
BONUS_MULTIPLIER=1.5

# VLC Configuration
VLC_RECONNECT_INTERVAL=5000
VLC_MAX_RETRIES=3

# Feature Flags
ENABLE_OFFLINE_MODE=false
ENABLE_VIDEO_PLAYBACK=true
ENABLE_ADMIN_PANEL=true
ENABLE_DEBUGGING=false